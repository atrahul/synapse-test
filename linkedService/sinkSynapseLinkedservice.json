{
	"name": "sinkSynapseLinkedservice",
	"type": "Microsoft.Synapse/workspaces/linkedservices",
	"properties": {
		"parameters": {
			"SynapseWorkspaceName": {
				"type": "String"
			},
			"SQLDedicatedPoolName": {
				"type": "String"
			},
			"SQLLoginUsername": {
				"type": "String"
			},
			"SQLLoginPassword": {
				"type": "String",
				"defaultValue": "abcd@1234"
			}
		},
		"annotations": [],
		"type": "AzureSqlDW",
		"typeProperties": {
			"connectionString": "Integrated Security=False;Encrypt=True;Connection Timeout=30;Data Source=\"@{concat(linkedService().SynapseWorkspaceName,'.sql.azuresynapse.net')}\";Initial Catalog=@{linkedService().SQLDedicatedPoolName};User ID=@{linkedService().SQLLoginUsername};Password=@{linkedService().SQLLoginPassword}"
		},
		"connectVia": {
			"referenceName": "AutoResolveIntegrationRuntime",
			"type": "IntegrationRuntimeReference"
		}
	}
}